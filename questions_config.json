  "preguntas_base": [
    {
      "id": "D1-Q1",
      "dimension": "D1",
      "numero": 1,
      "texto_template": "¿El plan presenta líneas base cuantitativas con fuentes oficiales (DANE, DNP, SISPRO, etc.) para el área de {}?",
      "criterios_evaluacion": {
        "indicadores_cuantitativos_minimos": 3,
        "fuentes_oficiales_minimas": 2,
        "series_temporales_años_minimos": 3,
        "cobertura_territorial_especificada": true
      },
      "patrones_verificacion": [
        "\\d{4}",
        "fuente:|según|datos de",
        "DANE|DNP|SISPRO|SIVIGILA|Ministerio",
        "línea base|año base",
        "\\d+(\\.\\d+)?\\s*%"
      ],
      "scoring": {
        "excelente": {"min_score": 0.85, "criteria": "5+ indicadores, fuentes oficiales, 5+ años serie"},
        "bueno": {"min_score": 0.70, "criteria": "3-4 indicadores, 2+ fuentes, 3-4 años"},
        "aceptable": {"min_score": 0.55, "criteria": "2 indicadores, 1-2 fuentes, 2 años"},
        "insuficiente": {"min_score": 0.0, "criteria": "< 2 indicadores o sin fuentes"}
      },
      "modulos_responsables": ["initial_processor_causal_policy", "dereck_beach"]
    },
    {
      "id": "D1-Q2",
      "dimension": "D1",
      "numero": 2,
