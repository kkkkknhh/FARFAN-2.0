        "cuantificacion_brecha": true,
        "vacios_explicitos": true,
        "sesgos_reconocidos": true,
        "calidad_datos_evaluada": true
      },
      "patrones_verificacion": [
        "brecha de|déficit de",
        "no se cuenta con|información insuficiente",
        "sesgo de|limitación de|subregistro"
      ],
      "scoring": {
        "excelente": {"min_score": 0.85, "criteria": "Brecha cuantificada, vacíos explícitos, sesgos reconocidos"},
        "bueno": {"min_score": 0.70, "criteria": "Brecha estimada, algunos vacíos identificados"},
        "aceptable": {"min_score": 0.55, "criteria": "Brecha mencionada, reconocimiento parcial"},
        "insuficiente": {"min_score": 0.0, "criteria": "Sin cuantificación o sin reconocimiento de limitaciones"}
